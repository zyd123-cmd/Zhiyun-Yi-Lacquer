.banner.data-v-57280228 {
  width: 100%;
  /* 确保轮播图宽度为100% */
  height: 400rpx;
  /* 根据需要设置高度 */
}
.nbanner.data-v-57280228 {
  width: 100%;
  /* 确保轮播图宽度为100% */
  height: 400rpx;
}
.swiper-item-image.data-v-57280228 {
  width: 100%;
  /* 确保图片宽度填满容器 */
  height: 100%;
  /* 确保图片高度填满容器 */
  display: block;
  /* 确保图片填满容器并且没有额外的空间 */
}
/* 导航栏样式 */
.nav-list.data-v-57280228 {
  display: flex;
  /* 水平排列其子元素 */
  flex-wrap: wrap;
  /* 如果需要，允许子元素换行 */
  justify-content: space-around;
  /* 根据需要调整水平间距 */
  background-color: ghostwhite;
  border-radius: 30px;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.nav-item.data-v-57280228 {
  display: flex;
  /* 确保nav-item也是一个Flexbox容器 */
  flex-direction: column;
  /* 子元素垂直排列 */
  align-items: center;
  /* 中心对齐子元素 */
  margin: 15rpx;
  /* 根据需要设置外边距 */
}
.nav-item-image.data-v-57280228 {
  width: 100rpx;
  height: 100rpx;
}
.nav-item-text.data-v-57280228 {
  white-space: nowrap;
  /* 防止文本换行 */
  overflow: hidden;
  /* 如果文本溢出，则隐藏溢出部分 */
  text-overflow: ellipsis;
  /* 文本溢出时显示省略号 */
  font-size: 20rpx;
}
/* tab滑动栏样式 */
.scrollable-tabs.data-v-57280228 {
  width: 100%;
  overflow: hidden;
  /* 隐藏溢出的内容 */
}
.scroll-view.data-v-57280228 {
  white-space: nowrap;
  /* 防止内容自动换行 */
  /* 确保没有其他样式影响布局 */
  display: flex;
  flex-direction: row;
  /* 明确设置flex方向为水平 */
}
.tab.data-v-57280228 {
  display: inline-block;
  /* 子元素水平排列 */
  padding: 20rpx 40rpx;
  /* 设置内边距 */
  /* border: 1px solid #ddd; */
  /* 添加边框，根据需要调整样式 */
  margin-right: 10rpx;
  /* 设置右边距，确保标签之间有一定的间隔 */
  transition: color 0.3s;
  /* 平滑过渡颜色变化 */
}
.tabtext.data-v-57280228 {
  font-weight: bold;
}
.tab.active.data-v-57280228 {
  color: #e60527;
  /* 激活标签的文字颜色 */
}
.tab-icon-text.data-v-57280228 {
  display: grid;
  justify-content: space-around;
  align-items: center;
}
.tab-icon.data-v-57280228 {
  height: 10rpx;
  width: 100%;
}
/* 内容样式 */
.content.data-v-57280228 {
  padding: 20rpx;
  border: 2px solid ghostwhite;
  /* 添加黑色边框 */
}
.content-item.data-v-57280228 {
  margin-bottom: 2rpx;
}
.content-image.data-v-57280228 {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  /* 添加图片和文字之间的间距 */
  /* 新增以下样式确保图片不会被挤压变形 */
  min-width: 200rpx;
  min-height: 200rpx;
  flex-shrink: 0;
  /* 防止图片在flex容器缩放时被挤压 */
}
.content-item.data-v-57280228 {
  display: flex;
  /* 使用 Flexbox 布局 */
  align-items: flex-start;
  /* 将align-items设置为flex-start，防止文字挤压图片 */
  border: 1px solid ghostwhite;
  /* 添加灰色边框 */
  padding: 10rpx;
  /* 添加一些内边距 */
  border-radius: 5rpx;
  /* 如果需要，添加圆角 */
  /* 可以考虑设置flex-wrap: wrap; 来处理文字过多的情况 */
  flex-wrap: wrap;
}
/* 确保.content-text在flex容器中可以灵活布局 */
.content-text.data-v-57280228 {
  font-weight: 500;
  /* 加粗文字 */
  font-size: 30rpx;
  margin-top: 0rpx;
  margin-left: 0rpx;
  /* 调整左边距 */
  flex: 1;
  /* 允许text扩展以填满可用空间 */
}
.moree.data-v-57280228 {
  display: flex;
  justify-content: center;
  /* 水平居中 */
  align-items: center;
  /* 垂直居中 */
}
.more.data-v-57280228 {

  color: gray;
  /* 文字颜色设置为灰色 */
  font-size: 12px;
  /* 文字大小设置为12像素 */
}

